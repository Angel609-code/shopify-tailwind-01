<div class="px-4 py-8">
  <div class="flex flex-col items-center my-8">
    <h2 class="text-3xl text-center">{{ section.settings.title }}</h2>
  </div>
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      {% for product in section.settings.featured_collection.products
        limit: section.settings.number_of_products_to_show
      %}
        {% render 'product-card', _product: product %}
      {% else %}
        {% for item in (1..4) %}
            {% render 'product-placeholder' %}
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured collection",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Featured collection"
    },
    {
      "type": "collection",
      "id": "featured_collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "number_of_products_to_show",
      "label": "Number of products to show",
      "step": 1,
      "min": 1,
      "max": 8,
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Featured collection"
    }
  ]
}
{% endschema %}
